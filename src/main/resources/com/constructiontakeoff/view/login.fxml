<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.constructiontakeoff.controller.LoginController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Construction Takeoff System" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <TextField fx:id="usernameField" promptText="Username" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" onAction="#handleLogin"/>
        <Button text="Sign Up" onAction="#handleSignupNavigation"/>
    </HBox>
    
    <Label fx:id="messageLabel" textFill="RED"/>
</VBox>
